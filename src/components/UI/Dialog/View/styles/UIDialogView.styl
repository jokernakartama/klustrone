@import '~src/global'

.dialog
    @media MOBILE
        background-color: LCD_BEIGE
        color: LCD_BLACK
        display: block
        max-height: calc(100vh - 44px)
        margin-bottom: 22px
        box-sizing: border-box
        align-self: center
        border: 2px solid LCD_BLACK
        border-radius: 2px
        box-shadow: 1px 1px 0px LCD_SHADOWCOLOR, 1px 1px 0px LCD_SHADOWCOLOR inset
        padding: 18px 20px
        overflow: auto
    &-wrapper
        @media MOBILE
            position: fixed
            top: 0
            left: 0
            width: 100%
            height: 100%
        @media MOBILE
            display: none
            align-content: center
            justify-content: center
    
        &_open
            @media MOBILE
                display: flex
    &__input-wrapper
        @media MOBILE
            padding: 18px 0

    &__button-wrapper
        @media MOBILE
            display: flex
            justify-content: space-between
    &__button
        @media MOBILE
            background-color: LCD_BEIGE
            border: 2px solid LCD_BLACK
            border-radius: 0px
            color: LCD_BLACK
            line-height: 1.125em
            margin-left: auto
            max-width: 140px
            padding: 0.125em 0 0
            width: 50%
            box-shadow: 1px 1px 0px LCD_SHADOWCOLOR, 1px 1px 0px LCD_SHADOWCOLOR inset
            &:active
                background-color: LCD_BLACK
                color: LCD_BEIGE
