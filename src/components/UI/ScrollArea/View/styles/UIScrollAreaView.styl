@import '~src/global'

.scroll-area
    &__track
        position: absolute
        &_position
            &_vertical
                right: 2px
                bottom: 2px
                top: 2px
                height: auto
                @media MOBILE
                    top: 6px
                    bottom: 4px
                    width: 3px
                    right: 4px 
                    &:after
                        background-color: LCD_BLACK
                        content: ""
                        display: block
                        height: calc(100% - 4px)
                        position: absolute
                        right: 2px
                        top: 0
                        width: 2px
            &_horizontal
                height: 6px
                bottom: 2px
                left: 2px
                right: 2px
                width: auto

                @media MOBILE
                    height: 3px
    &__thumb
        @media MOBILE
            background-color: LCD_BLACK