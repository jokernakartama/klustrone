@import '~src/global'

.dropdown
    &__content-wrapper
        z-index: 1
        @media MOBILE
            position: fixed
            top: 23px
            left: 0
            width: 100%
            bottom: 0
            display: none
            justify-content: center
            align-content: center
            &_visible
                display: flex
        @media DESKTOP
            height: 0
            overflow: hidden
            position: absolute
            transition: 0.2s
            &_visible
                height: auto
    &__content
        @media MOBILE
            background-color: LCD_BEIGE
            color: LCD_BLACK
            display: block
            max-height: calc(100vh - 44px)
            margin-bottom: 22px
            box-sizing: border-box
            align-self: center
            border: 2px solid LCD_BLACK
            border-radius: 2px
            position: relative
            box-shadow: 1px 1px 0px LCD_SHADOWCOLOR, 1px 1px 0px LCD_SHADOWCOLOR inset
            padding: 0px 2px 0px 20px

    &__cancel
        display: none
        @media MOBILE
            display: block

    &__option
        line-height: 2em
        position: relative
        &_type
            &_separator
                border-bottom: 2px solid LCD_BLACK
                box-shadow: 1px 1px 0px LCD_SHADOWCOLOR
                padding: 0
            &_radio
                padding-right: 18px
                display: table
                &^[1]_checked:after
                    background-color: LCD_BLACK
                    box-shadow: 1px 1px 0px LCD_SHADOWCOLOR
                    content: ""
                    display: block
                    height: 6px
                    margin-left: 8px
                    vertical-align: middle
                    width: 6px
                    position: absolute
                    right: 6px
                    top: calc(50% - 1px)
            &_checkbox
                padding-right: 18px
                display: table
                &:after
                    font-family: MOBILE_SMALL_FONT
                    line-height: 10px
                    content: "\2715"
                    display: block
                    height: 10px
                    position: absolute
                    right: 0
                    top: calc(50% - 7px)
                    width: 10px
                &^[1]_checked:after
                    content: "\2713"
    &__scroll-area
        max-height: calc(100vh - 64px)
        padding-right: 18px
        box-sizing: border-box
        & .scroll-area__content
            padding-bottom: 8px
