@import '~src/global'

.mobile-actions-panel
    background-color: LCD_BEIGE
    position: fixed
    right: 0
    @media MOBILE_PORTRAIT
        box-sizing: content-box
        display: table
        height: 40px
        width: 100%
        bottom: 20px
    @media MOBILE_LANDSCAPE
        top: 23px
        display: flex
        flex-direction: column
        width: 25vh
        min-width: 80px
        height: calc(100% - 43px)
    &__button
        border-style: solid
        border-width: 2px 1px
        border-color: LCD_BLACK
        box-sizing: border-box
        display: table-cell
        width: 25%
        vertical-align: middle
        box-shadow: 2px 1px 0px SHADOWCOLOR
        @media MOBILE_LANDSCAPE
            display: block
            width: 100%
            height: 25%
            min-height: 28px
            border-width: 1px 0px 1px 2px
        &:first-child
            @media MOBILE_LANDSCAPE
                 border-top-width: 0px
            @media MOBILE_PORTRAIT
                border-left-width: 0px
        &:last-child
            @media MOBILE_LANDSCAPE
                border-bottom-width: 0px
            @media MOBILE_PORTRAIT
                border-right-width: 0px
        & > button
            background-color: transparent
            display: block
            border: medium none
            height: 100%
            width: 100%
            line-height: normal
            border-radius: 0px
            padding: 0
            @media MOBILE_PORTRAIT
                line-height: 40px
            &:active
                background-color: LCD_BLACK
                color: LCD_BEIGE
