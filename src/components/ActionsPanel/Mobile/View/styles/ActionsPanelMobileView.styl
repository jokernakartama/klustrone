@import '~src/global'

.mobile-actions-panel
    @media MOBILE
        background-color: LCD_BEIGE
        position: fixed
        right: 0
        display: flex
        @media MOBILE_PORTRAIT
            box-sizing: content-box
            height: 50px
            width: 100%
            bottom: 20px
        @media MOBILE_LANDSCAPE
            top: 23px
            flex-direction: column
            width: 25vh
            min-width: 80px
            height: calc(100% - 43px)
    &__button
        @media MOBILE
            border-style: solid
            border-width: 2px 1px
            border-color: LCD_BLACK
            box-sizing: border-box
            display: flex
            width: 25%
            justify-content: center
            align-content: center
            flex-direction: column
            box-shadow: 2px 1px 0px SHADOWCOLOR
            @media MOBILE_LANDSCAPE
                display: block
                width: 100%
                height: 25%
                min-height: 28px
                border-width: 1px 0px 1px 2px
        &:first-child
            @media MOBILE_LANDSCAPE
                 border-top-width: 0px
            @media MOBILE_PORTRAIT
                border-left-width: 0px
        &:last-child
            @media MOBILE_LANDSCAPE
                border-bottom-width: 0px
            @media MOBILE_PORTRAIT
                border-right-width: 0px
        & > button
            background-color: transparent
            display: block
            border: medium none
            height: 100%
            width: 100%
            border-radius: 0px
            padding: 0
            &:active
                background-color: LCD_BLACK
                color: LCD_BEIGE
