@import '~src/global'

.file-manager
    @media MOBILE
        height: calc(100vh - 23px)

.service-special-message
    @media MOBILE
        align-items: center
        box-sizing: border-box
        display: flex
        flex-direction: column
        height: 100%
        justify-content: center
        padding: 20px
    &__message
        @media MOBILE
            margin: -2em auto 2em
            padding: 8px 0
            text-align: center
    &__buttons
        @media MOBILE
            display: flex
            width: 100%
            justify-content: space-between
