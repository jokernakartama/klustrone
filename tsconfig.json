{
  "compileOnSave": true,
  "compilerOptions": {
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "allowSyntheticDefaultImports": true,
    "outDir": "./dist/",
    "module": "es6",
    "jsx": "react",
    "noEmitOnError": true,
    "allowJs": true,
    "baseUrl": ".",
    "paths": {
      "~/*": ["src/*"]
    }
  },
  "awesomeTypescriptLoaderOptions": {
    "silent": true
  },
  "files": [
    "./src/index.ts"
  ],
  "exclude": [
    "./src/**/*.js"
  ]
}
